{
    "name": "oxonai-ide",
    "version": "1.0.0",
    "author": "OxonAI Team",
    "description": "OxonAI IDE - AI-powered development environment",
    "main": "main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "dev": "concurrently \"npm run dev:react\" \"wait-on tcp:5173 && electron . --no-sandbox\"",
        "dev:react": "vite --port 5173 --strictPort",
        "build:react": "vite build",
        "build": "npm run build:react && electron-builder",
        "build:win": "npm run build:react && electron-builder --win",
        "build:mac": "npm run build:react && electron-builder --mac",
        "build:linux": "npm run build:react && electron-builder --linux"
    },
    "build": {
        "appId": "com.oxonai.ide",
        "productName": "OxonAI IDE",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "main.js",
            "preload.js",
            "build/**/*"
        ],
        "win": {
            "icon": "assets/icon.png",
            "target": [
                "zip"
            ]
        },
        "mac": {
            "icon": "assets/icon.png",
            "target": [
                "zip"
            ],
            "category": "public.app-category.developer-tools"
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                "AppImage",
                "zip"
            ],
            "category": "Development"
        }
    },
    "dependencies": {
        "@monaco-editor/react": "^4.7.0",
        "@xterm/xterm": "^6.0.0",
        "electron-store": "^8.1.0",
        "framer-motion": "^12.26.1",
        "node-fetch": "^2.7.0",
        "openai": "^4.20.0",
        "simple-git": "^3.30.0",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "devDependencies": {
        "@types/node": "^25.0.8",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.0",
        "electron": "^39.2.7",
        "electron-builder": "^24.9.1",
        "lucide-react": "^0.294.0",
        "postcss": "^8.4.32",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "wait-on": "^7.2.0"
    }
}
